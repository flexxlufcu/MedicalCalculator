<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FBF1E9"
    tools:context=".spid">

    <TextView
        android:id="@+id/tv_spid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#325753"
        android:text="  Скорость инфузии препарата"
        android:textColor="#C5DADA"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Введите массу тела (кг)"
        android:inputType="numberDecimal"
        android:textColor="#2E7A73"
        android:textColorHint="#98B5B2"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_doza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Введите дозу преппарата"
        android:inputType="numberDecimal"
        android:textColor="#2E7A73"
        android:textColorHint="#98B5B2"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_concentrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Введите концентрацию преппарата"
        android:inputType="numberDecimal"
        android:textColor="#2E7A73"
        android:textColorHint="#98B5B2"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_resultSpid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#2E7A73"
            android:textSize="20sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_rerultSpid"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/tv_resultSpid"
            android:backgroundTint="#C0DAD7"
            android:fontFamily="serif"
            android:text="Рассчитать результат"
            android:textAlignment="viewStart"
            android:textColor="#2E7A73"
            android:textSize="20sp"
            app:cornerRadius="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_info2"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/btn_rerultSpid"
            android:backgroundTint="#C0DAD7"
            android:fontFamily="serif"
            android:onClick="info2"
            android:text="Справка"
            android:textAlignment="viewStart"
            android:textColor="#2E7A73"
            android:textSize="20sp"
            app:cornerRadius="0dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back2"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="530px"
            android:layout_height="60dp"
            android:layout_above="@id/btn_on_list2"

            android:backgroundTint="#C0DAD7"
            android:fontFamily="serif"
            android:onClick="back2"
            android:text="Назад"
            android:textAlignment="viewStart"
            android:textColor="#2E7A73"
            android:textSize="20sp"
            app:cornerRadius="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_next2"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="530px"
            android:layout_height="60dp"
            android:layout_above="@id/btn_on_list2"
            android:layout_alignParentRight="true"
            android:backgroundTint="#C0DAD7"
            android:fontFamily="serif"
            android:onClick="next2"
            android:text="Далее"
            android:textAlignment="textEnd"
            android:textColor="#2E7A73"
            android:textSize="20sp"
            app:cornerRadius="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_on_list2"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_on_glstr2"
            android:backgroundTint="#C0DAD7"
            android:fontFamily="serif"
            android:onClick="toList2"
            android:text="Вернуться к списку калькуляторов"
            android:textAlignment="viewStart"
            android:textColor="#2E7A73"
            android:textSize="20sp"
            app:cornerRadius="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_on_glstr2"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:backgroundTint="#C0DAD7"
            android:fontFamily="serif"
            android:onClick="toGlstr2"
            android:text="Вернуться на главную страницу"
            android:textAlignment="viewStart"
            android:textColor="#2E7A73"
            android:textSize="20sp"
            app:cornerRadius="0dp" />

    </RelativeLayout>

</LinearLayout>